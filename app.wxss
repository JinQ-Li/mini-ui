/**
 ** app.wxss
 ** 全局样式 都在此文件编写
 **/

page {
  padding: 0;
  margin: 0;
  box-sizing: border-box !important;
}

/* 盒模型 */
.siz-bor {
  box-sizing: border-box !important;
}

/* // 布局 flex */
.m-flex-c {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.m-ai-start {
  align-items: flex-start;
}

.m-flex-r {
  display: flex;
  align-items: center;
}

.m-jc-s {
  justify-content: flex-start;
}

.m-jc-sb {
  justify-content: space-between;
}

.m-gap-10 {
  gap: 10px;
}

.m-gap-15 {
  gap: 10px;
}

.m-gap-20 {
  gap: 20px;
}

.m-gap-40 {
  gap: 40px;
}

/* 定位 */
.m-p-fixed {
  position: fixed;
  z-index: 1000;
}

.m-p-relative {
  position: relative;
}

.m-p-absolute {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 内外边距 */
.pd-side-16 {
  padding-left: 16px;
  padding-right: 16px;
}

.pd-side-20 {
  padding-left: 20px;
  padding-right: 20px;
}

.pd-side-30 {
  padding-left: 30px;
  padding-right: 30px;
}

.pd-side-40 {
  padding-left: 40px;
  padding-right: 40px;
}

.m-top-20 {
  margin-top: 20px;
}

.m-left-8 {
  margin-left: 8px;
}

.mar-side-30 {
  margin-left: 30px;
  margin-right: 30px;
}

.m-top-32 {
  margin-top: 32px;
}

.m-bottom-32 {
  margin-bottom: 32px;
}

/* 矩形 */
.m-circular-angle-4 {
  border-radius: 4px;
  overflow: hidden;
}

.m-circular-angle-8 {
  border-radius: 8px;
}

.m-circular-angle-12 {
  border-radius: 12px;
  overflow: hidden;
}

/* Text 文本 文字 */
.edge-left-box {
  width: 6px;
  height: 12px;
  background: #3C64F6;
  border-radius: 4px;
}

/* 字体颜色 */
.m-fc-white {
  color: #ffffff;
}

.m-fc-3C64F6 {
  color: #3C64F6;
}

.m-fc-black44 {
  color: #00000044;
}

/* 字体大小 */
.m-fz-20 {
  font-size: 20px;
}

.m-fz-12 {
  font-size: 12px;
}